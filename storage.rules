rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function signedIn() { return request.auth != null; }
    function isImage() {
      return request.resource != null
        && request.resource.contentType != null
        && request.resource.contentType.matches('image/.*');
    }
    function isPdf() {
      return request.resource != null
        && request.resource.contentType != null
        && request.resource.contentType == 'application/pdf';
    }
    function smallEnough(maxMb) {
      return request.resource != null
        && request.resource.size < maxMb * 1024 * 1024;
    }
    function allowedFileType() { return isImage() || isPdf(); }

    // âœ… PUBBLICO (foto profilo/cover)
    match /users/{uid}/public/{rest=**} {
      allow read: if signedIn();
      allow create, update: if signedIn()
        && request.auth.uid == uid
        && allowedFileType()
        && smallEnough(5);
      allow delete: if signedIn() && request.auth.uid == uid;
    }

    // âœ… PRIVATO (PDF e documenti utente)
    match /users/{uid}/private/{rest=**} {
      allow read: if signedIn() && request.auth.uid == uid;
      allow create, update: if signedIn()
        && request.auth.uid == uid
        && allowedFileType()
        && smallEnough(5);
      allow delete: if signedIn() && request.auth.uid == uid;
    }

    match /league_icons/{fileName} {
      allow read: if signedIn();
      allow write: if false;
    }

    // ðŸ”’ default deny
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
